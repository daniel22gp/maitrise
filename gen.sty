\ProvidesPackage{gen}

\RequirePackage{amsmath}         % For the \text command
\RequirePackage{lipsum}

% General macros
% ==========================================

\providecommand{\ensuretext}[1]{\ifmmode\text{#1}\else#1\fi}
\providecommand{\superscript}[1]{\ensuremath{^{\text{#1}}}}
\providecommand{\subscript}[1]{\ensuremath{_{\text{#1}}}}
\providecommand{\qstring}[1]{\ensuretext{``{\tt #1}''}}		% Quoted string
\providecommand{\scare}[1]{\ensuretext{``#1''}}						% Scare quotes
\providecommand{\strong}[1]{\textbf{#1}}									% Strong emphasis
\providecommand{\term}[1]{\textsf{#1}}										% New term


% Figures
% ==========================================

\providecommand{\fig}[3][pdf]{
	\begin{figure}[tbh!]
	\centering
	\IfFileExists{fig/#2.#1}{\includegraphics{fig/#2}}{\missingfigure{#2.#1}}
	\caption{#3}\label{fig:#2}
	\end{figure}
}



